<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="classpathDsManager"
		class="com.yibo.saiku.service.datasource.ClassPathResourceDatasourceManager">
		<property name="path" value="res:saiku-datasources" />
	</bean>
	<!-- <property name="path" value="file:///var/saiku/saiku-datasources/"/> -->

	<bean id="sessionService" class="com.yibo.saiku.web.service.SessionService">
		<property name="authenticationManager" ref="authenticationManager" />
	</bean>

	<bean id="connectionManager" class="com.yibo.saiku.web.impl.SecurityAwareConnectionManager" init-method="init" destroy-method="destroy">
		<property name="dataSourceManager" ref="classpathDsManager" />
		<property name="sessionService" ref="sessionService" />

	</bean>

	<bean id="datasourceServiceBean" class="com.yibo.saiku.service.datasource.DatasourceService">
		<property name="connectionManager" ref="connectionManager" />
	</bean>

	<bean id="olapDiscoverServiceBean" class="com.yibo.saiku.service.olap.OlapDiscoverService">
		<property name="datasourceService" ref="datasourceServiceBean" />
	</bean>

	<bean id="olapQueryBean" scope="session" class="com.yibo.saiku.service.olap.OlapQueryService" destroy-method="destroy">
		<property name="olapDiscoverService" ref="olapDiscoverServiceBean" />
	</bean>


	<bean id="datasourceResourceBean" class="com.yibo.saiku.web.rest.resources.DataSourceResource">
		<property name="datasourceService" ref="datasourceServiceBean" />
	</bean>

	<bean id="olapDiscoverBean" scope="session"
		class="com.yibo.saiku.web.rest.resources.OlapDiscoverResource">
		<property name="olapDiscoverService" ref="olapDiscoverServiceBean" />
	</bean>


	<bean id="queryResource" scope="request"
		class="com.yibo.saiku.web.rest.resources.QueryResource">
		<property name="olapQueryService" ref="olapQueryBean" />
		<property name="olapDiscoverService" ref="olapDiscoverServiceBean" />
	</bean>

	<bean id="queryData" scope="request"
		  class="com.yibo.saiku.web.rest.resources.QueryData">
		<property name="olapQueryService" ref="olapQueryBean" />
		<property name="olapDiscoverService" ref="olapDiscoverServiceBean" />
	</bean>

	<bean id="sessionResource" class="com.yibo.saiku.web.rest.resources.SessionResource">
		<property name="sessionService" ref="sessionService" />
	</bean>

    <bean id="platformBean" class="com.yibo.saiku.service.PlatformUtilsService">

        <property name="path" value="/tmp/saiku-server/tomcat/webapps/ROOT/js/saiku/plugins/"/>
    </bean>

    <bean id="infoResource" class="com.yibo.saiku.web.rest.resources.InfoResource">
        <property name="platformUtilsService" ref="platformBean"/>
    </bean>


	<bean id="repositoryBean" scope="request"
		class="com.yibo.saiku.web.rest.resources.BasicRepositoryResource">
		<property name="olapQueryService" ref="olapQueryBean" />
		<property name="path" value="res:saiku-repository" />

	</bean>
	<!-- <property name="path" value="file:///var/saiku/saiku-datasources/"/> -->

	<bean id="acl" scope="singleton" class="com.yibo.saiku.web.rest.objects.acl.Acl">
		<property name="path" value="res:saiku-repository" />
		<property name="adminRoles">
			<list>
				<value>ROLE_ADMIN</value>
			</list>
		</property>
	</bean>

	<bean id="repository2bean" scope="request"
		class="com.yibo.saiku.web.rest.resources.BasicRepositoryResource2">
		<property name="path" value="res:saiku-repository" />
		<property name="sessionService" ref="sessionService" />
		<property name="acl" ref="acl" />
	</bean>

	<bean id="tagRepositoryBean" scope="request"
		class="com.yibo.saiku.web.rest.resources.BasicTagRepositoryResource">
		<property name="olapQueryService" ref="olapQueryBean" />
		<property name="path" value="res:saiku-repository" />
	</bean>

	<bean id="filterRepositoryBean" scope="session"
		class="com.yibo.saiku.web.rest.resources.FilterRepositoryResource">
		<property name="olapQueryService" ref="olapQueryBean" />
		<property name="path" value="res:saiku-repository" />
	</bean>



	<bean id="exporterBean" scope="request"
		class="com.yibo.saiku.web.rest.resources.ExporterResource">
		<property name="repository" ref="repository2bean" />
		<property name="queryResource" ref="queryResource" />
	</bean>


	<bean id="statsBean" scope="singleton" class="com.yibo.saiku.web.rest.resources.StatisticsResource" />
	
	<bean id="startupBean" scope="singleton" class="com.yibo.saiku.web.rest.util.StartupResource"  init-method="init" />
	
</beans>
